<UserControl x:Class="PatientManagementSystem.PatientLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PatientManagementSystem"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Label Content="LOGIN" FontSize="50" Foreground="#FFF3E9E9" Margin="316,59,316,473" FontFamily="Century Gothic" FontWeight="Bold"/>
        <Label Content="Email" FontSize="30" Foreground="#FFF3E9E9" Margin="117,141,602,400"/>
        <TextBox x:Name ="txtEmail"  HorizontalAlignment="Left" Margin="117,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="591" FontSize="30" BorderBrush="#FF075985"/>
        <Label Content="Password" FontSize="30" Foreground="#FFF3E9E9" Margin="117,295,534,253"/>
        <PasswordBox Name="txtPassword" PasswordChar ="*"  HorizontalAlignment="Left" Margin="117,353,0,0" VerticalAlignment="Top" Width="591" FontSize="30" BorderBrush="#FF075985"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="117,481,0,0" VerticalAlignment="Top" Width="591" Height="48" FontSize="30" Background="#FF60A5FA" FontFamily="Arial" Foreground="#FFF7F5F5"/>

    </Grid>
</UserControl>
